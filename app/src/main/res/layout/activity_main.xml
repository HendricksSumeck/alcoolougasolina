<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/exibir"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="272dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gasolina"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="631dp"
        android:fontFamily="casual"
        android:text="Álcool x Gasolina"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcular"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="394dp"
        android:backgroundTint="#2196F3"
        android:onClick="calcular"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#4CAF50" />

    <EditText
        android:id="@+id/alcool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Preço do álcool"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/gasolina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/gasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="95dp"
        android:ems="10"
        android:hint="Preço da gasolina"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alcool" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="329dp">

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="312dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="14dp"
        android:text="Desenvolvido por: Hendrick Sumeck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcular" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="272dp"
        android:text="Abasteça com:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gasolina" />

</androidx.constraintlayout.widget.ConstraintLayout>